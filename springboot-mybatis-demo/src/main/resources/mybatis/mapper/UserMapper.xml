<!--根据dtd复制-->
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--如果没有namespace:img/exception_2-->
<mapper namespace="com.geshaofeng.springbootmybatisdemo.mapper.UserMapper">

    <!--type In Config XML file -->
    <resultMap type="com.geshaofeng.springbootmybatisdemo.entity.User" id="usermap">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <!--javaType一一映射,可不配置-->
        <result column="createTime" property="createTime" typeHandler="com.geshaofeng.springbootmybatisdemo.handler.TimestampHandler"/>
        <result column="updateTime" property="updateTime" typeHandler="com.geshaofeng.springbootmybatisdemo.handler.TimestampHandler"/>
    </resultMap>


    <select id="selectOneUser" parameterType="int" resultMap="usermap">
        SELECT id,username,password FROM user WHERE id = #{id}
    </select>
</mapper>